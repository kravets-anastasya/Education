/*
Напишите программу, которая переводит данный символ в верхний регистр.

Входные данные
Задан один символ c.

Выходные данные
Если символ является строчной буквой латинского алфавита (то есть буквой от a до z), выведите вместо него аналогичную заглавную букву, 
иначе выведите тот же самый символ (такая операция называется "перевод в верхний регистр").
*/


#include <iostream>
 
using namespace std;
 
int main(){
   char user_symbol{};
   cin >> user_symbol;
	
	if(user_symbol >= 'a' && user_symbol <= 'z') {
		char symbol = user_symbol - 32;
		cout << symbol;
		return 0;
	}
	else {
		cout << user_symbol;
	}
}
